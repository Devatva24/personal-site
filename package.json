{
  "name": "personal_site",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "description": "Personal portfolio of Devatva Rachit showcasing projects in Machine Learning, Data Science, and Software Development.",
  "author": "Devatva Rachit",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devatvarachit/personal-site.git"
  },
  "bugs": {
    "url": "https://github.com/devatvarachit/personal-site/issues"
  },
  "homepage": "https://github.com/devatvarachit/personal-site#readme",
  "scripts": {
    "start": "npx @11ty/eleventy --serve",
    "dev": "npx @11ty/eleventy --serve",
    "build": "npx @11ty/eleventy",
    "build-ghpages": "npx @11ty/eleventy --pathprefix=/personal-site/",
    "prepare": "husky",
    "lint:md": "npx markdownlint-cli \"projects/**/*.md\"",
    "spell:md": "npx cspell --config cspell.json \"projects/**/*.md\"",
    "check:md": "npm run spell:md && npm run lint:md",
    "test": "echo \"Running markdown linters and spellcheck\" && npm run check:md"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@iktakahiro/markdown-it-katex": "^4.0.1",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "katex": "^0.16.22",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@cspell/dict-en-au": "^1.1.5",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.45.0"
  }
}
