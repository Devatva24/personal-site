<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        {% if title %}
        {{ title }}
        {% else %}
        Devatva Rachit
        {% endif %}
    </title>
    <meta name="description" content="{{ description or 'Devatva Rachit - Personal blog site' }}">
    <!-- Open Graph / social sharing -->
    <meta property="og:title" content="{{ title or 'Devatva Rachit' }}">
    <meta property="og:description" content="{{ description or 'Devatva Rachit - Personal blog site' }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ page.url | url }}">
    {#
    <meta property="og:image" content="/assets/preview.png"> #}
    <!-- Twitter card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title or 'Devatva Rachit' }}">
    <meta name="twitter:description" content="{{ description or 'Devatva Rachit - Personal blog site' }}">
    {#
    <meta name="twitter:image" content="/assets/preview.png"> #}
    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/global-variables.css">
    <link rel="stylesheet" href="/assets/css/holi-theme.css">
    <link rel="stylesheet" href="/assets/css/global.css">
    <!-- Favicon -->
    <link rel="icon" href="/assets/images/favicon.png" type="image/x-icon">
</head>